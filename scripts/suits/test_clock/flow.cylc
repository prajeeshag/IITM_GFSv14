
[scheduler]
    UTC mode = True

[scheduling]
    # Start the workflow from 2022-06-01 UTC+05:30
    initial cycle point = 2022-06-17T00:00:00
    final cycle point = +P1D

    [[xtriggers]]
        clock_1 = wall_clock(PT13H27M):PT10S

    [[graph]]
        # Repeat every three hours starting at the initial cycle point.
        PT1H = """
            @clock_1 => task1
        """
[runtime]
    [[task1]]
        script="""
            echo "task cycle point $CYLC_TASK_CYCLE_POINT"
        """
    